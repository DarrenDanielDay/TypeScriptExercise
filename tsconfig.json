{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "dist",
    "sourceMap": true,
    "downlevelIteration": true,
    "module": "CommonJS",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"]
  },
  "include": ["src", "types"],
  "ts-node": {
    "logError": true,
    "files": true
  }
}
