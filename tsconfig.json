{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noStrictGenericChecks": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "dist",
    "sourceMap": true,
    "downlevelIteration": true,
    "module": "CommonJS",
    "target": "ESNext",
    "lib": ["DOM", "ES2019"]
  },
  "include": ["src", "types"],

  "ts-node": {
    "logError": true,
    "files": true
  }
}
